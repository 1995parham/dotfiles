source "echo set my_gopass = \"$(gopass show -o snapp/mail/parham.alvani@snapp.cab)\"|"

set folder      = imap://127.0.0.1:1143
set imap_user   = parham.alvani
set imap_pass   = $my_gopass
set spoolfile   = +INBOX
set postponed   = +Drafts
mailboxes       = +INBOX

# Store message headers locally to speed things up.
# If hcache is a folder, Mutt will create sub cache folders for each account which may speeds things up even more.
set header_cache = ~/.local/share/mutt

# Store messages locally to speed things up, like searching message bodies.
# Can be the same folder as header_cache.
# This will cost important disk usage according to your e-mail amount.
set message_cachedir = ~/.local/share/mutt

# Specify where to save and/or look for postponed messages.
# set postponed = +[Gmail]/Drafts

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

set mailcap_path = ~/.config/mutt/mailcap
auto_view text/html

set sort=threads
set sort_aux=last-date-received

set ssl_force_tls=no

bind pager j next-line
bind pager k previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry
bind index <tab> sidebar-toggle-visible

# Palette for use with the Linux console.  Black background.

color hdrdefault blue black
color quoted blue black
color signature blue black
color attachment red black
color prompt brightmagenta black
color message brightred black
color error brightred black
color indicator black red
color status color232 color208
color tree color80 black
color normal white color233
color markers red black
color search white black
color tilde brightmagenta black

set pager_format="%4C %Z %[!%b %e at %I:%M %p] %.20n %s%* -- (%P)"

# color body brightwhite black '\*+[^*]+\*+'
# color body brightwhite black '_+[^_]+_+'

set realname = 'Parham Alvani'
set from = parham.alvani@snapp.cab
set use_from = yes

set smtp_pass = $my_gopass
set smtp_url  = smtp://parham.alvani@127.0.0.1:1025
