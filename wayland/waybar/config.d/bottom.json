// vim: ft=jsonc
{
    "position": "bottom",
    "ipc": true,
    "id": "bar-0",
    "height": 33,
    "modules-center": [
        "custom/love#relationship",
        // "idle_inhibitor",
        "custom/love#departure",
        "custom/love#birthday"
    ],
    "modules-left": [
        "custom/date",
        "custom/jdate",
        "custom/khal",
        "network#alvani",
        "network#home"
    ],
    "modules-right": [
        "network#speedify",
        "network#easynet"
    ],
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "bluetooth": {
        "format": "{icon}",
        "format-alt": "bluetooth: {status}",
        "format-icons": {
            "enabled": "",
            "disabled": ""
        },
        "tooltip-format": "{}"
    },
    "network#alvani": {
        "interface": "alvani",
        "format": "{ipaddr} 󰋒",
        "format-disconnected": ""
    },
    "network#home": {
        "interface": "home",
        "format": "{ipaddr} ",
        "format-disconnected": ""
    },
    "network#speedify": {
        "interface": "connectify0",
        "format": "{ifname}: {ipaddr}",
        "format-disconnected": ""
    },
    "network#easynet": {
        "interface": "nobitex",
        "format": "{ifname}: {ipaddr}",
        "format-disconnected": ""
    },
    "custom/love#relationship": {
        "interval": 3600,
        "exec": "$HOME/.config/waybar/scripts/couple.sh relationship",
        "format": " {}"
    },
    "custom/love#departure": {
        "interval": 3600,
        "exec": "$HOME/.config/waybar/scripts/couple.sh departure",
        "format": "󰀝 {}"
    },
    "custom/love#birthday": {
        "interval": 3600,
        "exec": "$HOME/.config/waybar/scripts/couple.sh birthday",
        "format": " {}"
    },
    "custom/date": {
        "interval": 3600,
        "exec": "date +'%d %B %Y'",
        "exec-if": "which date",
        "format": "{} "
    },
    "custom/jdate": {
        "interval": 3600,
        "exec": "jdate +'%d %B %Y'",
        "exec-if": "which jdate",
        "format": "{} "
    },
    "custom/khal": {
        "format": "{}",
        "tooltip": true,
        "interval": 300,
        "format-icons": {
            "default": " "
        },
        "exec": "$HOME/.config/waybar/scripts/khal.py",
        "return-type": "json"
    }
}
