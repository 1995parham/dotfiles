; vim: set ft=gitconfig:
[core]
  excludesfile = ~/.config/git/gitignore
  editor = nvim

[pull]
  rebase = true

[credential]
  helper = cache

[merge]
  tool = vimdiff
  # conflictstyle = diff3

[mergetool]
  prompt = true

[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c 'wincmd w' -c 'wincmd J'

[init]
  defaultBranch = main

[user]
  name = Parham Alvani
  email = parham.alvani@gmail.com

[fetch]
  parallel = 0

[http "https://github.com"]
  version = HTTP/2
  # sslVersion = tlsv1.3
  maxRequests = 15

[http "https://gitlab.freedesktop.org"]
  version = HTTP/2
  # sslVersion = tlsv1.3
  maxRequests = 15

[url "git@github.com:parham-alvani/"]
  insteadOf = https://github.com/parham-alvani/

[url "git@github.com:1995parham/"]
  insteadOf = https://github.com/1995parham/

# [url "git@github.com:"]
#	insteadOf = https://github.com/

[diff "exif"]
	textconv = exiftool

[diff "sqlite3"]
    binary = true
    textconv = "echo .dump | sqlite3"

[include]
  path = ~/.config/git/elahe.cfg
  path = ~/.config/git/alias.cfg
  path = ~/.config/git-private/secret.cfg

[push]
	autoSetupRemote = true

[filter "kubeconfig"]
	clean = yq -I4 'del(.current-context) | .contexts[].context.namespace = \"default\"'
	smudge = cat
