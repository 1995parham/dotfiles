; vim: set ft=gitconfig:
[includeIf "gitdir:~/Documents/Git/raha/"]
        path = raha.gitconfig
[core]
        excludesfile = gitignore
        editor = nvim
[credential]
        helper = cache
[merge]
        tool = vimdiff
[mergetool]
        prompt = true
[mergetool "vimdiff"]
        cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c 'wincmd w' -c 'wincmd J'
