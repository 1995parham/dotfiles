; vim: set ft=gitconfig:
[core]
  excludesfile = ~/.config/git/gitignore
  editor = vim

[pull]
  merge = true

[credential]
  helper = cache

[merge]
  tool = vimdiff
  # conflictstyle = diff3

[mergetool]
  prompt = true

[init]
  defaultBranch = main

[user]
  name = Elahe Dastan
  email = elahe.dstn@gmail.com

[fetch]
  parallel = 0

[http "https://github.com"]
  version = HTTP/2
  # sslVersion = tlsv1.3
  maxRequests = 15

[http "https://gitlab.freedesktop.org"]
  version = HTTP/2
  # sslVersion = tlsv1.3
  maxRequests = 15

[url "git@github.com:parham-alvani/"]
  insteadOf = https://github.com/parham-alvani/

[url "git@github.com:elahe-dastan/"]
  insteadOf = https://github.com/elahe-dastan/

# [url "git@github.com:"]
#	insteadOf = https://github.com/

[diff "exif"]
	textconv = exiftool

[diff "sqlite3"]
    binary = true
    textconv = "echo .dump | sqlite3"

[include]
  path = ~/.config/git/alias.cfg
  path = ~/.config/git-private/secret.cfg
