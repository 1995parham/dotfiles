{
  "position": "bottom",
  "ipc": true,
  "id": "bar-0",
  "output": "eDP-1",
  "height": 30,
  "modules-center": ["idle_inhibitor"],
  "modules-left": ["custom/date", "custom/jdate", "network#alvani"],
  "modules-right": ["network#snapp", "network#baly", "custom/touchpad"],
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },
  "bluetooth": {
    "format": "{icon}",
    "format-alt": "bluetooth: {status}",
    "format-icons": {
      "enabled": "",
      "disabled": ""
    },
    "tooltip-format": "{}"
  },
  "network#alvani": {
    "interface": "alvani",
    "format": "{ipaddr} ",
    "format-disconnected": ""
  },
  "network#snapp": {
    "interface": "snapp-*",
    "format": "{ifname}: {ipaddr}",
    "format-disconnected": ""
  },
  "network#baly": {
    "interface": "baly",
    "format": "{ifname}: {ipaddr}",
    "format-disconnected": ""
  },
  "custom/touchpad": {
    "interval": 3,
    "exec": "$HOME/.config/waybar/scripts/touchpad.sh"
  },
  "custom/love#relationship": {
    "interval": 3600,
    "exec": "$HOME/.config/waybar/scripts/couple.sh relationship",
    "format": " {}"
  },
  "custom/love#birthday": {
    "interval": 3600,
    "exec": "$HOME/.config/waybar/scripts/couple.sh birthday",
    "format": " {}"
  },
  "custom/date": {
    "interval": 3600,
    "exec": "date +'%d %B %Y'",
    "exec-if": "which date"
  },
  "custom/jdate": {
    "interval": 3600,
    "exec": "jdate +'%d %B %Y'",
    "exec-if": "which jdate"
  }
}
