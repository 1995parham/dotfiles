* {
  background-color: rgba(0,0,0,0);
  font: "Iosevka Etoile 12";
}

window {
  transparency: "real";
  fullscreen: true;
}

mainbox {
  children: [ inputbar, listview ];
  margin: 25% 30% 25% 30%;
  background-color: @bg;
  border-radius: 12;
  border: 2;
  border-color: #ffffff0A;
}

listview {
  columns: 1;
  padding: 8;
  spacing: 0;
}

element {
  border: 1;
  text-color: @item;
  orientation: horizontal;
  padding: 8 12 8 12;
  border-radius: 6;
}

element selected {
  background-color: @ac;
  border-color: #ffffff0A;
  text-color: @ac-txt;
  transition: 20;
}

element-icon {
  size: 40;
  horizontal-align: 0.5;
  vertical-align: 0.5;
}

element-text {
  text-color: inherit;
  horizontal-align: 0;
  padding: 8 12 8 12;
}

inputbar {
  children: [entry];
  padding: 4 8 4 8;
  background-color: @bg;
  border: 0 0 1 0;
  border-color: #ffffff0A;
}

prompt {
  enabled: false;
}

entry {
  text-color: @txt;
  padding: 8 12 8 12;
}
